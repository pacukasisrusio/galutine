@model IEnumerable<galutine.Models.ApplicationUser>
@{
    ViewData["Title"] = "Admin - Users";
}
<h2>Users</h2>
<table class="table">
    <thead><tr><th>Email</th><th>Blocked</th><th>Actions</th></tr></thead>
    <tbody>
        @foreach(var u in Model) {
            <tr>
                <td>@u.Email</td>
                <td>@u.IsBlocked</td>
                <td>
                    <form method="post" asp-action="ToggleBlock" asp-route-id="@u.Id" style="display:inline">
                        <button class="btn btn-sm btn-warning">@((u.IsBlocked) ? "Unblock" : "Block")</button>
                    </form>
                    <form method="post" asp-action="ToggleAdmin" asp-route-id="@u.Id" style="display:inline">
                        <button class="btn btn-sm btn-secondary">Toggle Admin</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
